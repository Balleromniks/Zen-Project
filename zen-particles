
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Zen Particles</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            background-color: #000;
            touch-action: none; /* Prevents scrolling when dragging */
        }
        canvas {
            display: block;
        }
        .instruction {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: rgba(255, 255, 255, 0.5);
            font-family: sans-serif;
            pointer-events: none;
            user-select: none;
            font-size: 1.2rem;
            animation: fadeOut 4s forwards;
            animation-delay: 2s;
        }
        @keyframes fadeOut {
            to { opacity: 0; }
        }
    </style>
</head>
<body>

    <div class="instruction">Touch & Drag</div>
    <canvas id="canvas"></canvas>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        let particles = [];
        let hue = 0;

        // Resize canvas to fill screen
        function resize() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resize);
        resize();

        // --- Particle Class ---
        class Particle {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                // Random size between 1 and 5
                this.size = Math.random() * 5 + 1;
                // Random speed/direction
                this.speedX = Math.random() * 3 - 1.5;
                this.speedY = Math.random() * 3 - 1.5;
                // Color based on cycling hue
                this.color = 'hsl(' + hue + ', 100%, 50%)';
            }

            update() {
                this.x += this.speedX;
                this.y += this.speedY;
                
                // Shrink slowly
                if (this.size > 0.2) this.size -= 0.1;
            }

            draw() {
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        function handleParticles() {
            for (let i = 0; i < particles.length; i++) {
                particles[i].update();
                particles[i].draw();

                // Remove tiny particles
                if (particles[i].size <= 0.3) {
                    particles.splice(i, 1);
                    i--;
                }
            }
        }

        // --- The Animation Loop ---
        function animate() {
            // This creates the "trail" effect. 
            // Instead of clearing the canvas fully, we draw a semi-transparent black rectangle.
            ctx.fillStyle = 'rgba(0, 0, 0, 0.1)'; 
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            handleParticles();
            
            // Cycle colors slowly
            hue += 2; 
            
            requestAnimationFrame(animate);
        }
        animate();

        // --- Interaction ---
        
        // Add particles on mouse/touch move
        function createParticles(x, y, amount = 5) {
            for (let i = 0; i < amount; i++) {
                particles.push(new Particle(x, y));
            }
        }

        // Mouse Support
        canvas.addEventListener('mousemove', function(e) {
            createParticles(e.x, e.y);
        });

        canvas.addEventListener('click', function(e) {
            createParticles(e.x, e.y, 20); // Explosion on click
        });

        // Touch Support (iPhone)
        canvas.addEventListener('touchmove', function(e) {
            // Prevent scrolling
            e.preventDefault();
            for (let i = 0; i < e.touches.length; i++) {
                createParticles(e.touches[i].clientX, e.touches[i].clientY);
            }
        }, { passive: false });

        canvas.addEventListener('touchstart', function(e) {
            e.preventDefault();
            for (let i = 0; i < e.touches.length; i++) {
                createParticles(e.touches[i].clientX, e.touches[i].clientY, 20);
            }
        }, { passive: false });

    </script>
</body>
</html>
